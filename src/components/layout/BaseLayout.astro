---
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Midgard Hobbies & Games - Derry, NH',
  description = 'Your local game store in Derry, NH for miniatures, RPGs, TCGs, hobby supplies, and gaming space.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts - System font stack defined in Tailwind config -->

    <!-- Slot for additional head content (SEO, Schema, etc.) -->
    <slot name="head" />
  </head>
  <body>
    <!-- Facebook SDK -->
    <div id="fb-root"></div>
    <script
      is:inline
      async
      defer
      crossorigin="anonymous"
      src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v18.0"></script>

    <slot />
  </body>
</html>
