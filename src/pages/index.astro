---
import BaseLayout from '../components/layout/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import SEOHead from '../components/seo/SEOHead.astro';
import SchemaMarkup from '../components/seo/SchemaMarkup.astro';
import Hero from '../components/sections/Hero.astro';
import HoursTable from '../components/sections/HoursTable.astro';
import ImageGallery from '../components/ui/ImageGallery';

// Import optimized store images
import image1 from '@/assets/images/Midgard HDR-2.webp';
import image2 from '@/assets/images/Midgard HDR-3.webp';
import image3 from '@/assets/images/Midgard HDR-4.webp';
import image4 from '@/assets/images/Midgard HDR-5.webp';
import image5 from '@/assets/images/Midgard HDR-6.webp';
import image6 from '@/assets/images/Midgard HDR-7.webp';

// Curated store images for homepage gallery
const galleryImages = [
  {
    src: image1.src,
    alt: 'Midgard Hobbies & Games store interior view 1',
    caption: 'Explore our gaming space',
  },
  {
    src: image2.src,
    alt: 'Midgard Hobbies & Games store interior view 2',
    caption: 'Wide selection of products',
  },
  {
    src: image3.src,
    alt: 'Midgard Hobbies & Games store interior view 3',
    caption: 'Miniatures and hobby supplies',
  },
  {
    src: image4.src,
    alt: 'Midgard Hobbies & Games store interior view 4',
    caption: 'Gaming tables and community space',
  },
  {
    src: image5.src,
    alt: 'Midgard Hobbies & Games store interior view 5',
    caption: 'TCG products and collectibles',
  },
  {
    src: image6.src,
    alt: 'Midgard Hobbies & Games store interior view 6',
    caption: 'Complete hobby painting selection',
  },
];
---

<BaseLayout title="Midgard Hobbies & Games - Derry, NH Game Store">
  <SEOHead
    slot="head"
    title="Midgard Hobbies & Games"
    description="Your local game store in Derry, NH for miniatures, RPGs, TCGs, hobby supplies, and gaming space. Visit us for all your tabletop gaming needs."
  />
  <SchemaMarkup slot="head" />

  <Header />
  <main>
    <Hero
      title="Welcome to Midgard Hobbies & Games"
      subtitle="Your local game store in Derry, NH for miniatures, RPGs, TCGs, hobby supplies, and gaming space."
      primaryCTA={{ text: 'Explore Games', href: '/games' }}
      secondaryCTA={{ text: 'Visit Our Store', href: '/contact' }}
    />

    <HoursTable />

    <section class="py-12 bg-brand-light">
      <div class="container-custom">
        <h2 class="text-3xl font-heading font-bold text-brand-primary text-center mb-8">
          Visit Our Store
        </h2>
        <ImageGallery client:load images={galleryImages} columns={3} />
      </div>
    </section>

    <!-- Optional Facebook embed section -->
    <section class="py-12 bg-white">
      <div class="container-custom">
        <h2 class="text-3xl font-heading font-bold text-brand-primary text-center mb-8">
          Latest Updates
        </h2>
        <div class="max-w-2xl mx-auto">
          <div
            class="fb-page"
            data-href="https://facebook.com/midgardhobbiesandgames"
            data-tabs="timeline"
            data-width="500"
            data-height="600"
            data-small-header="false"
            data-adapt-container-width="true"
            data-hide-cover="false"
            data-show-facepile="true"
          >
            <blockquote
              cite="https://facebook.com/midgardhobbiesandgames"
              class="fb-xfbml-parse-ignore"
            >
              <a href="https://facebook.com/midgardhobbiesandgames">Midgard Hobbies & Games</a>
            </blockquote>
          </div>
        </div>
      </div>
    </section>

    <!-- Temporary content notice -->
    <div class="container-custom py-8">
      <div class="p-6 bg-brand-accent bg-opacity-10 rounded-lg border-l-4 border-brand-accent">
        <p class="text-brand-dark">
          <strong>Website under construction:</strong> Content migration from Wix in progress. Check
          back soon for our complete catalog and events calendar!
        </p>
      </div>
    </div>
  </main>
  <Footer />
</BaseLayout>
